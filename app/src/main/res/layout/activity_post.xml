<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.makarsamsonov.testbitprofi.PostActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/postTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:inputType="text|textMultiLine" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="POST"
        android:id="@+id/sendPostBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/postTextView"
        android:layout_alignEnd="@+id/postTextView"
        android:layout_marginLeft="200dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/backBtn"
        android:layout_alignTop="@+id/sendPostBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="200dp" />
</RelativeLayout>
